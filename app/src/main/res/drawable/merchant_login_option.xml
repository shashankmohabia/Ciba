<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="-500dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-1dp">
        <shape>
            <corners android:radius="500dp" />
            <solid android:color="@color/blue_light" />
        </shape>
    </item>

    <item
        android:bottom="-500dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="0dp">
        <shape>
            <corners android:radius="500dp" />
            <gradient
                android:angle="225"
                android:endColor="@color/blue_light"

                android:startColor="@color/blue_dark"/>
        </shape>
    </item>
</layer-list>